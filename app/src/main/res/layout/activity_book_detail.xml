<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".User.BookDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:drawableStart="@drawable/ic_back"
        android:padding="10dp"
        android:id="@+id/btn_back"
        android:drawablePadding="10dp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/primary"
                android:gravity="center"
                android:padding="30dp"
                android:layout_weight=".6">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:background="@color/white"
                    android:elevation="4dp"
                    android:scaleType="fitXY"
                    android:layout_margin="5dp"
                    android:id="@+id/im_cover"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="25dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TITLE"
                    android:textStyle="bold"
                    android:id="@+id/tv_title"
                    android:textSize="35dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:alpha=".2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author: BARCI"
                    android:id="@+id/tv_author"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_published"
                    android:layout_height="wrap_content"
                    android:text="Published date: hw dba"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AVAIALABLE"
                    android:textStyle="italic"
                    android:id="@+id/tv_availability"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_category"
                    android:background="@color/primary"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Programming"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black"
                    android:alpha=".2"/>

                <TextView
                    android:background="#C9E1FF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/tv_description"
                    android:padding="15dp"
                    android:text="gywgaydguu dydwfyfYFAUDFWUFUfuufdusfdufawutfdtwftftudfutf"
                    android:textColor="@color/black"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BORROW BOOK"
                    android:background="@color/primary"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/btn_borrow"
                    android:layout_marginTop="25dp"/>



            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>